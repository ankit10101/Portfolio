<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/maxresdefault" />

    <ImageView
        android:id="@+id/MyPicImgView"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/mypic" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/MyPicImgView"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="ANKIT BAJAJ"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/numberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTextView"
        android:layout_toRightOf="@id/MyPicImgView"
        android:paddingBottom="10dp"
        android:text="9871073191"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/numberTextView"
        android:layout_toRightOf="@id/MyPicImgView"
        android:paddingBottom="10dp"
        android:text="ankitbajaj333@gmail.com"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/summaryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/MyPicImgView"
        android:padding="10dp"
        android:text="@string/Summary"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/skillTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/summaryTextView"
        android:padding="10dp"
        android:text="@string/skills"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/skillListTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skillTextView"
        android:padding="10dp"
        android:text="@string/skillList"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/linkedinIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/linkedin_icon" />

        <ImageView
            android:id="@+id/facebookIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/linkedinIcon"
            android:layout_weight="1"
            android:src="@drawable/facebook_icon" />

        <ImageView
            android:id="@+id/githubIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/facebookIcon"
            android:layout_weight="1"
            android:src="@drawable/github_icon" />

        <ImageView
            android:id="@+id/twitterIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/githubIcon"
            android:layout_weight="1"
            android:src="@drawable/twitter_icon" />
    </LinearLayout>
</RelativeLayout>